@model MarqueSeuFut.Models.Partida

@{
    ViewData["Title"] = "Criação de Partidas";
}

<h3></h3>
<h2 align="center">Criação de Partidas</h2>

<h4>Criar Partida</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quadra" class="control-label"></label>
                <input asp-for="Quadra" class="form-control" />
                <span asp-validation-for="Quadra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cidade" class="control-label"></label>
                <input asp-for="Cidade" class="form-control" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeCasaId" class="control-label"></label>
                <select asp-for="TimeCasaId" class="form-control" asp-items="ViewBag.TimeCasaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TimeVisitanteId" class="control-label"></label>
                <select asp-for="TimeVisitanteId" class="form-control" asp-items="ViewBag.TimeVisitanteId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
                <a asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>

    <h3></h3>
    <h3></h3>
    <h3></h3>
    <h3></h3>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
