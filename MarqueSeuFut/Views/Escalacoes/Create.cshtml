@model MarqueSeuFut.Models.Escalacao

@{
    ViewData["Title"] = "Create";
}
<main>
    <h1>Adicionar jogador na escalação</h1>
    <br />
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    Jogador: <br />
                    <select asp-for="JogadorId" class="form-control" asp-items="ViewBag.NomeJogador"></select>
                </div>
                <div class="form-group">
                    Time: <br />
                    <select asp-for="TimeId" class="form-control" asp-items="ViewBag.NomeTime"></select>
                </div>

                <div class="form-group">
                    <input type="submit" value="Adicionar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Voltar</a>
    </div>
</main>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
